<li class="box-item presentation-item" <%if defined?(obj_id)%>edit-id="<%=obj_id%>"<%end%>>
  <% if defined?(prefix_id) && (prefix_id == "join" || prefix_id == "tw") %>
  <div class="selecting-item" style="display:none;"><i class="fa fa-check"></i><%= t('competition.modal.selected') %></div>
  <% end %>
  <%if defined?(prefix_id) %>
    <%generated_id= prefix_id + "-presentation-" + presentation.id.to_s%>
  <%else%>
    <%generated_id= "presentation-" + presentation.id.to_s%>
  <%end%>

  <%if defined?(obj_id)%>
    <%generated_id = "cat-" + obj_id.to_s + "-" + generated_id %>
  <%end%>

  <%= link_to(presentation_url(presentation)) do %>
    <!-- image/icon -->
    <div class="container-img">
      <div class="img-box" id="<%=generated_id%>"></div>
      <%if presentation.draft && presentation.notified_teacher %>
        <div class="presentation-draft">
          <h2 class="draftstyle">
            <i class="fa fa-bell"></i>
            <%=t('presentation.notified')%>
          </h2>
        </div>
      <%elsif presentation.draft%>
        <div class="presentation-draft">
          <h2 class="draftstyle">
            <i class="fa fa-edit"></i>
            <%=t('presentation.draft')%>
          </h2>
        </div>
      <%end%>
    </div>
  <% end %>

  <script>
      document.getElementById("<%=generated_id%>").style.backgroundImage = "url('<%=presentation_raw_thumbail(presentation)%>')";
  </script>

  <!-- Info -->
  <div class="caption">
    <!--Title -->
    <h6>
      <%= link_to presentation.title, presentation %>
    </h6>
    <!--Author -->
    <div class="author">
      <span class="by"><%=t('by')%></span>
      <%= link_to presentation.author.name, presentation.author.subject %>
    </div>
    <!--More info (Likes and Views) -->
    <hr>
    <div class="info-bottom">
      <!--like -->
      <div class="like">
         <% if presentation.post_activity%>
            <div class="count"><%=presentation.post_activity.likes.count.to_s%></div>
            <%= link_like(presentation.post_activity, :title =>t('presentation.actions.favorite'))%>
          <%else%>
            <div class="count">0</div>

          <%end%>
      </div>
      <!--views -->
      <div class="views">
        <%=presentation.visit_count.to_s%>
        <i class="fa fa-eye"></i>
      </div>
    </div>
  </div>
</li>
