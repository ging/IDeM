<% isPresentationOwner = false
	if !current_user.nil?
		isPresentationOwner = (current_user.id == presentation.author_id)
	end
%>
<div class="presentation_item_mini" pres-url="<%=presentation_path(presentation, :format => :full)%>">
	<% generated_id= "presentation-" + presentation.id.to_s %>

	<!-- image/icon -->
	<%= image_tag(presentation.thumbnail_url, :alt => presentation.title, :class => "presentation-image") %>

	<!-- Info -->
	<div class="caption">

		<!--Title -->
		<a href="<%= presentation_url(presentation)%>">
			<h5><%=presentation.title%></h5>
		</a>
		<!--Author -->
		<div class="author">
			<%= render 'users/user', :user => presentation.author%>
		</div>

		<!-- Link -->
		<div class="link">
			<!--<a href="<%#= presentation_url(presentation)%>"><i class="fa fa-eye"></i></a>-->
			<% if isPresentationOwner %>
			<a href="<%= edit_presentation_path(presentation)%>" class="button-primary-red"><i class="fa fa-pencil"></i></a>
			<% end %>
		</div>
	</div>
</div>
