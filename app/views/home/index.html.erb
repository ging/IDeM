<div id="idem-presentation" class="row">
    <%= image_tag('main_bg.jpg', :alt => 'idem'); %>
    <div id="publi">
		<p>enrich your frontiers publications with presentations</p>
		<p>diseminate your research with webinars</p>
    </div>
</div>

<div id="contents">

	<h2>FEATURED PRESENTATIONS</h2>
	<div class="row">
		<% @presentations.each do |presentation| %>
	    	<%= render 'presentations/presentation', :presentation => presentation %>
	  	<% end %>
	</div>

	<h2>UNCOMING WEBINARS</h2>
	<div class="row">
		<% @webinars.each do |webinar| %>
	    	<%= render 'webinars/webinar', :webinar => webinar %>
	  	<% end %>
	</div>
</div>