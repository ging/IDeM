<div class="row">
	<div class="col-md-9">
		<h4><%= link_to(publication.title, publication.loop_url, :target => '_blank')%></h4>
		<h5><%= publication.authors_name %></h5>
		<h6><%= publication.publication_name %>, <%= publication.publication_date.split('-')[0] %></h6>
	</div>
	<% if showActions %>
	<div class="col-md-3 publication_actions">
		<div class="button-secondary pull-right"><%= link_to('Create presentation', new_presentation_path({:publication => publication.id})) %></div>
		<button type="button" class="button-secondary pull-right btn-webinar" data-pub="<%=publication.id%>" data-toggle="modal" data-target="#myModal">
  			Schedule webinar
		</button>
	</div>
	<% end %>
</div>