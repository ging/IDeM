<div class="row">
	<div class="col-md-9">
		<h4><%= publication.title %></h4>
		<h5><%= publication.authors_name %></h5>
		<h6><%= publication.publication_name %>, <%= publication.publication_date.split('-')[0] %></h6>
	</div>
	<% if showActions %>
	<div class="col-md-3 publication_actions">
		<div class="button-secondary pull-right"><%= link_to('Create presentation', new_presentation_path({:publication => publication.id})) %></div>
		<div class="button-secondary pull-right"><%= link_to('Schedule webinar', new_webinar_path({:publication => publication.id})) %></div>
	</div>
	<% end %>
</div>