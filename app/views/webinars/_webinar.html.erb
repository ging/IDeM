<div class="col-md-2 col-xs-6 webinar-item">

  <div class="webinar">
    <% generated_id= "webinar-" + webinar.id.to_s %>
    <div class="title">
      <!--Title -->
      <a href=<%=  webinar_url(webinar) %>>
        <h5><i class="fa fa-clock-o fa-lg"></i><p><%= webinar.title %></p></h5>
      </a>
    </div>

    <!-- Info -->
    <div class="caption">
      <!--Publication -->
      <div class="publication">
        <%= link_to webinar.publication.title, webinar.publication.loop_url, :target => '_blank' %>
      </div>
      <!--Date -->
      <div class="date">
        <h4><%= webinar.start_date.to_formatted_s(:short)%></h4>
      </div>
      <!--Author -->
      <div class="author">
        <%= render 'users/user', :user => webinar.author%>
      </div>
      <!-- Link -->
      <div class="link button-secondary-yellow">
        <%= link_to('Go to webinar', webinar_url(webinar), :class => "logo");%>
      </div>
    </div>
  </div>
</div>
